// ****************************************
// Mobile view
// ****************************************
@media screen and (max-width: $breakpoint)
  .grid-small, .grid-big
    div.item
      margin-bottom 2em

// ****************************************
// Desktop view
// ****************************************
@media screen and (min-width: $breakpoint)
  .grid-big
    div.item
      lost-column 1/2
      lost-column-cycle 2
      margin-bottom 1em
  .grid-small
    lost-flex-container row
    div.item
      lost-column 3/9
      lost-column-cycle 3
      margin-bottom 2em

@media screen and (max-width: 950px) and (min-width: $breakpoint)
  .grid-small
    div.item
      lost-column 2/4
      lost-column-cycle 2
      margin-bottom 2em

.grid
  lost-utility clearfix
